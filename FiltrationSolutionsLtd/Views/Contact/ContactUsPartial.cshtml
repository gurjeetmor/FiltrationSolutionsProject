@model FiltrationSolutionsLtd.Models.ContactUs

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>

<div>
    @using (Html.BeginForm("ContactUs", "Contact", FormMethod.Post, new { @class = "modal-form" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger", @ShowMessageBox = "True" })

        <div class="form-group">
            <div class="col-md-3">
                <label>First Name: </label>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                @Html.ValidationMessageFor(model => model.FirstName, "")
            </div>
            <div class="row"></div>
        </div>
        
        <div class="form-group">
            <div class="col-md-3">
                <label>Last Name: </label>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                @Html.ValidationMessageFor(model => model.LastName, "")
            </div>
            <div class="row"></div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label>Email: </label>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email Address" })
                @Html.ValidationMessageFor(model => model.Email, "")
            </div>
            <div class="row"></div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label>Phone: </label>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Phone" })
                @Html.ValidationMessageFor(model => model.Phone, "")
            </div>
            <div class="row"></div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label>Address: </label>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Address" })
                @Html.ValidationMessageFor(model => model.Address, "")
            </div>
            <div class="row"></div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label>Subject: </label>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", @placeholder = "Subject" })
                @Html.ValidationMessageFor(model => model.Subject, "")
            </div>
            <div class="row"></div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label>Message: </label>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Message, new { @class = "form-control", @placeholder = "Optional Message" })
                @Html.ValidationMessageFor(model => model.Message, "")
            </div>
            <div class="row"></div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Send Message" class="btn btn-primary" />
            </div>
        </div>

    }
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>




