@model IEnumerable<FiltrationSolutionsLtd.Models.ProductCategory>
<link href="~/Content/MyStyle.css" rel="stylesheet" />
@*this is the shared partial view that is used to display the particular portion
    of webpage or the portion that is used at several different webpages
        this view display the vertical product category bar*@


    <ul class="nav nav-pills nav-stacked col-md-3">
        <li><h3>Services</h3></li>
        @foreach (var item in Model)
        {
            if (item.Id == 8)
            {
                <li class=@(ViewBag.ServiceCategory==item.CategoryName? "active":"")><a href="@Url.Action("ServiceDescription", "Services", new {productId=29 })">@item.CategoryName</a></li>
                
            }
            if (item.Id > 8 && item.Id <= 10)
            {
                <li class=@(ViewBag.ServiceCategory==item.CategoryName? "active":"")><a href="@Url.Action("BrowseServiceCategory", new { categoryId = item.Id })">@item.CategoryName</a></li>
            }

        }
    </ul>



