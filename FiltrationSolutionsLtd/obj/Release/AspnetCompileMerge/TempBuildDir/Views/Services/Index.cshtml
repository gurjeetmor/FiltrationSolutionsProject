@model IEnumerable<FiltrationSolutionsLtd.Models.ProductCategory>
<link href="~/Content/MyStyle.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")">Filtration Solutions</a></li>
            <li>Services</li>
        </ul>
    </div>
    <div class="row">
        @{
            Html.RenderAction("ServicesNavBarList", "Services");
        }

        <div class="col-md-9">
            <div class="row">

                @foreach (var item in Model)
                {
                    if (item.Id == 8)
                    {
                        <div class="col-md-4">
                            <a href="@Url.Action("ServiceDescription", "Services", new {productId=8 })" style="text-decoration:none;">
                                <h4>@item.CategoryName</h4>
                                <img src="@Url.Content(item.ImageUrl)" class="img-responsive" style="width:100%; height:250px;" />
                            </a>
                            
                        </div>
                    }
                    if (item.Id > 8 & item.Id <= 10)
                    {
                        <div class="col-md-4">
                            <a href="@Url.Action("BrowseServiceCategory", new { categoryId = item.Id })" style="text-decoration:none;">
                                <h4>@item.CategoryName</h4>
                                <img src="@Url.Content(item.ImageUrl)" class="img-responsive" style="width:100%; height:250px;" />
                            </a>
                            
                        </div>
                    }
                }

            </div>
            
            </div>
    </div>
</div>

