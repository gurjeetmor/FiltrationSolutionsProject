<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filtration Solutions Limited</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/MyStyle.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:black;" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"> <img src="~/ProductImages/logowithblack1.jpg" class="img-responsive"></a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "Index", "About", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Services", "Index", "Services", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Products", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Blog", "Index", "Blog", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Contact", "Index", "Contact", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>               
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()


        <div class="clearfix"></div> <hr />
        <footer>

            <a href="@Url.Action("Index", "Contact")" style="float:right; color:white;" class="btn btn-primary">ENQUIRE NOW</a>

            <h4>Quick Links</h4>

            <a href="~/TermandCondition/Filtration Solutions Limited Terms and Conditions June 2019.pdf" style="color:black;">Terms and Conditions</a><br />
            <a href="~/TermandCondition/Filtration Solutions Limited Privacy Policy June 2019.pdf" style="color:black;">Privacy Policy</a><br />
            <a href="~/TermandCondition/FSL Credit Application form June 2019.pdf" style="color:black;">Credit Application Form</a><hr />
            <div>
                <p style="float:left;">Copyright &copy; @DateTime.Now.Year by Filtration Solutions Limited. All rights reserved.</p>
                @*<span><a href="#" class="fa fa-facebook" style="float:right;"></a></span>
                <span><a href="#" class="fa fa-linkedin" style="float:right;"></a></span>*@
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>