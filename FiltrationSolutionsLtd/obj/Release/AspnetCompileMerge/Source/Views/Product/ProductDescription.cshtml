@model IEnumerable<FiltrationSolutionsLtd.Models.ProductDetails>

<link href="~/Content/MyStyle.css" rel="stylesheet" />

<div class="container">
    <div class="row">       
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Filtration Solutions</a></li>
                <li><a href="@Url.Action("Index", "Product")">Products</a></li>
                <li><a href="@Url.Action("BrowseCategoryProduct", "Product", new {ViewBag.categoryId})">@ViewBag.categoryName</a></li>
                <li>@ViewBag.selectedProduct</li>
            </ul>
    </div>
    <div class="row">
        <div class="col-md-5">
            <br/>
            @foreach (var item in Model)
            {
                <img src="@Url.Content(item.ImageUrl)" class="img-responsive" style="width:100%; height:400px" />
            }
        </div>
        <div class="col-md-7">

            @{
                Html.RenderAction("Details", "Product");
            }

            <br />
            <a href="@Url.Action("Index", "Contact")" class="btn btn-primary">REQUEST A QUOTE</a>
            

        </div>
    </div>

</div>



<div class="container" style="width:40%; margin-top:2%">
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h3 class="modal-title">Request a Quote</h3>
                </div>
                <div class="modal-body" id="myModalBody">
                    @* Here Modal Body will be Uploaded through Partial View(CreateCarouselPartial) *@

                </div>
            </div>
        </div>
    </div>
</div>

@*Script to Display the Model to Add the new Product Details in Product Detail List*@
<script>
    var RequestQuote = function () {
        var url = "/Product/CreateQuote";

        $("#myModalBody").load(url, function () {
            $("#myModal").modal("show");

        });
        
    }
</script>

